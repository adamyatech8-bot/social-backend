<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
  <div class="w-full min-h-screen bg-zinc-900 text-white">
    <!-- Navbar -->
    <a class="text-xl px-2 w-20 inline-block mt-5 ml-10 rounded-md bg-blue-600" href="/home">Home</a>

    <!-- Profile info -->
    <div class="flex items-start gap-4 mt-5 ml-10">
      <div class="w-20 h-20 rounded-full overflow-hidden">
        <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profilepic %>" alt="profile">
      </div>
      <div>
        <h3 class="text-2xl font-semibold">Hello, <%= user.name %> ðŸ‘‹</h3>
        <p class="text-zinc-400 mt-1">Bio.. details about user.</p>

        <!-- Stats -->
        <div class="flex gap-4 mt-3">
          <div class="bg-zinc-700 px-3 py-1 rounded-md text-center">
            <div class="font-semibold"><%= user.posts.length %>k</div>
            <div>posts</div>
          </div>
          <div class="bg-zinc-700 px-3 py-1 rounded-md text-center">
            <div class="font-semibold"><%= user.followers ? user.followers.length : 0 %></div>
            <div>follow</div>
          </div>
          <div class="bg-zinc-700 px-3 py-1 rounded-md text-center">
            <div class="font-semibold"><%= user.following ? user.following.length : 0 %></div>
            <div>followings</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Post form -->
    <h2 class="px-10 py-2 mt-5">Now you can create a post</h2>
    <form method="post" action="/uploadpost" enctype="multipart/form-data" class="p-10 space-y-4">
      <h3 class="text-2xl">Create a new post</h3>

      <input type="file" name="postpic" accept="image/*"
        class="block mb-3 text-sm text-zinc-400 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-600 file:text-white hover:file:bg-blue-700">

      <textarea name="content" placeholder="Write something..."
        class="resize-none w-1/3 p-3 bg-transparent border-2 border-zinc-500 rounded-md block"></textarea>

      <button type="submit" class="px-3 py-2 bg-blue-500 rounded-md">Post</button>
    </form>

    <!-- Posts section -->
    <div class="posts mt-10">
      <h3 class="text-xl text-zinc-700 ml-10 mb-5">Your posts</h3>
      <div class="postcontainer">

        <% user.posts.slice().reverse().forEach(function(post) { %>
          <div class="post mb-4 rounded-md w-1/3 p-3 ml-10 border-2 border-zinc-500">
            <h4 class="text-blue-500 mt-2">@<%= user.username %></h4>

            <!-- Post image -->
            <% if (post.postpic && post.postpic !== "default.png") { %>
              <div class="w-full h-64 mt-2 rounded-md overflow-hidden">
                <img src="/images/uploads/<%= post.postpic %>" alt="post image" class="w-full h-full object-cover">
              </div>
            <% } %>

            <!-- Post content -->
            <p class="tracking-tight mt-2"><%= post.content %></p>

            <!-- Likes -->
            <small class="mt-1 inline-block"><%= post.likes ? post.likes.length : 0 %> likes</small>

            <div class="flex flex-wrap gap-3 mt-2">
              <a class="text-blue-500" href="/like/<%= post._id %>?from=profile">
                <%= post.likes.indexOf(user._id) === -1 ? "like" : "unlike" %>
              </a>
              <a href="/edit/<%= post._id %>">edit</a>
            </div>

            <!-- Comments list -->
            <% if (post.comments && post.comments.length > 0) { %>
              <div class="mt-2">
                <% post.comments.forEach(function(comment) { %>
                  <div class="ml-2 mt-1 p-1 border-l-2 border-zinc-500">
                    <strong>@<%= comment.user?.username || "Unknown" %>:</strong> <%= comment.content %>
                  </div>
                <% }) %>
              </div>
            <% } %>

            <!-- Comment form -->
            <form method="post" action="/comment/<%= post._id %>" class="flex gap-2 mt-2">
              <input type="text" name="content" placeholder="Add a comment..."
                class="flex-1 p-2 rounded-md bg-zinc-800 border border-zinc-600 text-white" required>
              <button type="submit" class="px-3 py-1 bg-blue-500 rounded-md">Comment</button>
            </form>
          </div>
        <% }) %>

      </div>
    </div>
  </div>
</body>
</html>
