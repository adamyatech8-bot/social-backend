<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>home page</title>
  <script src="https://cdn.tailwindcss.com"></script>

</head>

<body>
  <div class="w-full min-h-screen bg-zinc-900 text-white">
    <div class="flex flex-row justify-end mr-4"> <a
        class="text-xl p-2 w-20 inline-block mt-5 ml-10 rounded-md bg-red-600  " href="/logout">Logout</a></div>
    <div class="flex items-start gap-2">
      <div class="w-10  h-10 ml-10  rounded-md overflow-hidden">
        <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profilepic %>" alt="">
      </div>
      <h3 class=" text-2xl">Hello, <%= user.name %> &#128075; </h3>
    </div>



    <div class="posts mt-10">
      <a class="text-xl p-2 w-20  mt-5  ml-10 rounded-md bg-blue-600" href="/profile">create new post </a>
        <a class="text-xl p-2 w-20  mt-5  ml-10 rounded-md bg-blue-600" href="/chat">chat with friends </a>
                <a class="text-xl p-2 w-20  mt-5  ml-10 rounded-md bg-blue-600" href="/client">user-page </a>
                     <a class="text-xl p-2 w-20  mt-5  ml-10 rounded-md bg-blue-600" href="/story">check latest story </a>
                   <a class="text-xl p-2 w-20  mt-5  ml-10 rounded-md bg-blue-600" href="/reels">check latest reels </a>
                                      
      <h3 class="text-xl text-zinc-700 mt-10 ml-10 mb-5">your latest posts-</h3>
    </div>


    <div class="posts mt-10 pb-20">
      <h3 class="text-xl text-zinc-700 ml-10 mb-5">your posts-</h3>
      <div class="postcontainer">

        <% user.posts.reverse().forEach(function(post) { %>
          <div class="post mb-4 rounded-md w-1/3 p-3 ml-10 border-2 border-zinc-500">
            <h4 class="text-blue-500 mt-2">@<%= user.username %>
            </h4>

            <!-- âœ… Show post image if exists -->
            <% if (post.postpic && post.postpic !=="default.png" ) { %>
              <div class="w-full h-64 mt-2 rounded-md overflow-hidden">
                <img src="/images/uploads/<%= post.postpic %>" alt="post image" class="w-full h-full object-cover">
              </div>
              <% } %>

                <!-- Post content -->
                <p class="tracking-tight mt-2">
                  <%= post.content %>
                </p>

                <small class="mt-1 inline-block">
                  <%= post.likes ? post.likes.length : 0 %> likes
                </small>

                <div class="flex flex-wrap gap-3 mt-2">
                 <a class="text-blue-500" href="/like/<%= post._id %>?from=home">
                    <%= post.likes.some(like=> like.equals(user._id)) ? "unlike" : "like" %>
                  </a>
                  <a href="/edit/<%= post._id %>">edit</a>
                </div>
                <!-- Comment list -->
                <div class="mt-2">
                  <% post.comments.forEach(function(comment){ %>
                    <div  class="ml-2 mt-1 p-1 border-l-2 border-zinc-500">
                      <strong>@<%= comment.user ? comment.user.username : 'Unknown' %>:</strong>
                      <%= comment.content %>
                    </div>
                    <% }); %>
                </div>

                <!-- Comment form -->
                <form method="post" action="/comment/<%= post._id %>" class="flex gap-2 mt-2">
                  <input type="text" name="content" placeholder="Add a comment..."
                    class="flex-1 p-2 rounded-md bg-zinc-800 border border-zinc-600 text-white" required>
                  <button type="submit" class="px-3 py-1 bg-blue-500 rounded-md">Comment</button>
                </form>
          </div>
          <% }); %>

      </div>
    </div>



  </div>

  </div>
</body>

</html>