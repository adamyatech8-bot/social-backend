<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>user-page</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>


<body>
  <div class="w-full min-h-screen bg-zinc-900 text-white">
    <div class="flex flex-row justify-end mr-4"> <a
        class="text-xl p-2 w-20 inline-block mt-5 ml-10 rounded-md bg-red-600  " href="/logout">Logout</a></div>
    <a class="text-xl px-2 w-20 inline-block mt-5 ml-10 rounded-md bg-blue-600" href="/home">Home</a>
    <div class="flex flex-col  items-center gap-2">
      <div class="w-20  h-20 ml-10  rounded-md overflow-hidden">
        <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profilepic %>" alt="profile" />

      </div>
      <h3 class=" text-2xl mt-5">Hello,<b><i> <%= user.name %></i></b> &#128075; </h3>
    </div>
    <div class="flex items-center  text-xl mt-10 justify-center">
      <h1>Bio.. details about user .</h1>
    </div>
    <div class="flex items-center gap-16 text-2xl mt-10 justify-center">
      <div> <small class="mt-1 ml-6 inline-block">
          12k
        </small>
        <h1 class="bg-zinc-300 text-black  rounded-md px-3 py-2 ">posts</h1>
      </div>
      <div> <small class="mt-1 ml-6 inline-block">
          135
        </small>
        <h1 class="bg-zinc-300 text-black  rounded-md px-3 py-2 ">follow</h1>
      </div>
      <div> <small class="mt-1 ml-10 inline-block ">
          12k
        </small>
        <h1 class="bg-zinc-300 text-black  rounded-md px-3 py-2 ">followings</h1>
      </div>
    </div>
    <hr class="mt-10">
    <div class="flex items-center gap-16 text-2xl mt-2 justify-around">
      <i class="fa-solid fa-camera text-2xl"></i>
      <i class="fa-solid fa-user text-2xl"></i>
    </div>
    <hr class="mt-2">
      <!-- Posts section -->
    <div class="posts mt-10 pb-10 ">
      <div class="postcontainer ">

        <% user.posts.slice().reverse().forEach(function(post) { %>
          <div class="post mb-4 rounded-md w-1/3 p-3 ml-10 border-2 border-zinc-500">
            <h4 class="text-blue-500 mt-2">@<%= user.username %></h4>

            <!-- ✅ Post image -->
            <% if (post.postpic && post.postpic !== "default.png") { %>
              <div class="w-full h-64 mt-2 rounded-md overflow-hidden">
                <img src="/images/uploads/<%= post.postpic %>" alt="post image" class="w-full h-full object-cover">
              </div>
            <% } %>

            <!-- ✅ Post content -->
            <p class="tracking-tight mt-2"><%= post.content %></p>

            <!-- ✅ Likes -->
            <small class="mt-1 inline-block"><%= post.likes ? post.likes.length : 0 %> likes</small>

            <div class="flex flex-wrap gap-3 mt-2">
              <a class="text-blue-500" href="/like/<%= post._id %>?from=profile">
                <%= post.likes.indexOf(user._id) === -1 ? "like" : "unlike" %>
              </a>
              <a href="/edit/<%= post._id %>">edit</a>
            </div>

            <!-- ✅ Comments list -->
            <% if (post.comments && post.comments.length > 0) { %>
              <div class="mt-2">
                <% post.comments.forEach(function(comment) { %>
                  <div class="ml-2 mt-1 p-1 border-l-2 border-zinc-500">
                    <strong>@<%= comment.user?.username || "Unknown" %>:</strong> <%= comment.content %>
                  </div>
                <% }) %>
              </div>
            <% } %>

            <!-- ✅ Comment form -->
            <form method="post" action="/comment/<%= post._id %>" class="flex gap-2 mt-2">
              <input type="text" name="content" placeholder="Add a comment..."
                class="flex-1 p-2 rounded-md bg-zinc-800 border border-zinc-600 text-white" required>
              <button type="submit" class="px-3 py-1 bg-blue-500 rounded-md">Comment</button>
            </form>
          </div>
        <% }) %>

      </div>
    </div>

</body>

</html>